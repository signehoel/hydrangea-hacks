{
    "manifest_version": 2,
  
    "name": "Bar Safety Extension",
    "description": "Safety first baby",
    "version": "1.0",
  
    "browser_action": {
     "default_icon": "icon.png",
     "default_popup": "popup.html"
    },
    "permissions": [
     "activeTab",
     "tabs"
     ],
     "content_scripts": [
        {
          "matches": [
            "<all_urls>"
          ],
          "js": ["popup.js"]
        }
      ]
}